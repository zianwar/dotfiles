#!/usr/bin/env sh

# Compilation flags
export ARCHFLAGS="-arch $(uname -m)"
export BREW_PREFIX="$(brew --prefix)"

# SSH key path
export SSH_KEY_PATH="~/.ssh/dsa_id"

# Prefer US English and use UTF-8.
export LANG=en_US.UTF-8
export LC_ALL='en_US.UTF-8'
export LSCOLORS=cxBxhxDxfxhxhxhxhxcxcx
export CLICOLOR=1

# support colors in less
export LESS_TERMCAP_mb=$'\E[01;31m'
export LESS_TERMCAP_md=$'\E[01;31m'
export LESS_TERMCAP_me=$'\E[0m'
export LESS_TERMCAP_se=$'\E[0m'
export LESS_TERMCAP_so=$'\E[01;44;33m'
export LESS_TERMCAP_ue=$'\E[0m'
export LESS_TERMCAP_us=$'\E[01;32m'

# Default terminal editor
export EDITOR='nano'

## Command history configuration
HISTFILE=$HOME/.zsh_history
HISTSIZE=1000000000
SAVEHIST=1000000000

setopt append_history
setopt extended_history
setopt hist_expire_dups_first
# ignore duplication command history list
setopt hist_ignore_dups
setopt hist_ignore_space
setopt hist_verify
setopt inc_append_history

# GNU coretutils (those that come with macOS are outdated).
export PATH="$(brew --prefix coreutils)/libexec/gnubin:$PATH"
# GNU "sed"
export PATH="$(brew --prefix gnu-sed)/libexec/gnubin:$PATH"
# GNU findutils
export PATH="$(brew --prefix findutils)/libexec/gnubin:$PATH"

# Go
export GOPATH=~/.go
export PATH="$PATH:$GOPATH/bin"

# Rust
export PATH="$PATH:$HOME/.cargo/bin"

# Yarn global modules bin
export PATH="$PATH:$HOME/.yarn/bin:$HOME/.config/yarn/global/node_modules/.bin"

# Android SDK platform tools (Flutter development)
# export PATH="$PATH:$HOME/Library/Android/sdk/platform-tools"

# fnm (Node package manager)
eval "$(fnm env --use-on-cd)"

# Enable persistent REPL history for `node`.
export NODE_REPL_HISTORY_FILE=~/.node_history
# Allow 32Â³ entries; the default is 1000.
export NODE_REPL_HISTORY_SIZE='32768'

# Always enable colored `grep` output.
export GREP_OPTIONS='--color=auto'

# Include custom scripts
export PATH="$PATH:$DOTFILES/scripts"

# Include custom binaries in ~/.local/bin
export PATH="$PATH:$HOME/.local/bin"

# bun completions
[ -s "/Users/anwar/.bun/_bun" ] && source "/Users/anwar/.bun/_bun"

# bun
export BUN_INSTALL="$HOME/.bun"
export PATH="$BUN_INSTALL/bin:$PATH"

# SelfControl.app CLI
export PATH="$PATH:/Applications/SelfControl.app/Contents/MacOS"

# Automatically remove duplicates from these arrays
typeset -U path PATH cdpath CDPATH fpath FPATH manpath MANPATH
